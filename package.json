{
  "name": "ai-token-tracker",
  "displayName": "AI Token Tracker",
  "description": "√úberwache deinen AI Token-Verbrauch und verhindere Halluzinationen",
  "version": "0.2.0",
  "publisher": "haenel881988",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI",
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "ai",
    "tokens",
    "copilot",
    "openai",
    "tracker",
    "monitoring",
    "hallucination",
    "prevention",
    "scope",
    "modular"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/haenel881988/ai-token-tracker"
  },
  "bugs": {
    "url": "https://github.com/haenel881988/ai-token-tracker/issues"
  },
  "homepage": "https://github.com/haenel881988/ai-token-tracker#readme",
  "license": "MIT",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onCommand:aiTokenTracker.showDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiTokenTracker.showDashboard",
        "title": "Token Dashboard √∂ffnen",
        "category": "AI Token Tracker"
      },
      {
        "command": "aiTokenTracker.resetCounters",
        "title": "Token Z√§hler zur√ºcksetzen",
        "category": "AI Token Tracker"
      },
      {
        "command": "aiTokenTracker.createScope",
        "title": "Neuen Scope erstellen",
        "category": "AI Token Tracker"
      },
      {
        "command": "aiTokenTracker.toggleCopilotIntegration",
        "title": "ü§ñ Copilot Auto-Konsolidierung ein/aus",
        "category": "AI Token Tracker",
        "icon": "$(robot)"
      },
      {
        "command": "aiTokenTracker.manualCopilotConsolidation",
        "title": "üìä Manuelle Copilot Konsolidierung", 
        "category": "AI Token Tracker",
        "icon": "$(graph)"
      },
      {
        "command": "aiTokenTracker.modularizeProject", 
        "title": "üèóÔ∏è Projekt modularisieren",
        "category": "AI Token Tracker",
        "icon": "$(organization)"
      },
      {
        "command": "aiTokenTracker.createGithubSetup",
        "title": "‚öôÔ∏è GitHub Setup erstellen", 
        "category": "AI Token Tracker",
        "icon": "$(github)"
      },
      {
        "command": "aiTokenTracker.analyzeComplexity",
        "title": "üîç Komplexit√§ts-Analyse",
        "category": "AI Token Tracker", 
        "icon": "$(search)"
      },
      {
        "command": "aiTokenTracker.findDuplicates",
        "title": "üîÑ Duplikate finden",
        "category": "AI Token Tracker",
        "icon": "$(files)"
      }
    ],
    "configuration": {
      "title": "AI Token Tracker",
      "properties": {
        "aiTokenTracker.defaultMaxTokens": {
          "type": "number",
          "default": 64000,
          "description": "Maximale Anzahl Tokens pro Scope (64k f√ºr Copilot Chat)"
        },
        "aiTokenTracker.warningThreshold": {
          "type": "number",
          "default": 0.8,
          "description": "Warnschwelle (80% = 0.8)"
        },
        "aiTokenTracker.enabledProviders": {
          "type": "array",
          "default": ["copilot", "openai"],
          "description": "Aktivierte AI-Provider",
          "items": {
            "type": "string",
            "enum": ["copilot", "openai", "claude"]
          }
        },
        "aiTokenTracker.autoCreateScopes": {
          "type": "boolean",
          "default": true,
          "description": "Automatisch Scopes f√ºr neue Dateien erstellen"
        },
        "aiTokenTracker.aiInstructions": {
          "type": "object",
          "default": {
            "tokenAwareness": true,
            "autoSplit": true,
            "maxTokensPerRequest": 2000,
            "warningThreshold": 75,
            "criticalThreshold": 90,
            "autoNewChatAt": 85,
            "splitComplexTasks": true,
            "includeTokenInfo": true
          },
          "description": "AI-Verhalten bei Token-Limits"
        },
        "aiTokenTracker.ignoreFiles": {
          "type": "array",
          "default": [
            "COMMIT_EDITMSG",
            "MERGE_MSG",
            "SQUASH_MSG",
            ".git/",
            "node_modules/",
            ".vscode/",
            "temp/",
            "tmp/"
          ],
          "description": "Dateimuster die ignoriert werden sollen"
        },
        "aiTokenTracker.realtimeMonitoring": {
          "type": "boolean", 
          "default": true,
          "description": "Echtzeit Token-√úberwachung aktivieren"
        },
        "aiTokenTracker.chatRecommendations": {
          "type": "boolean",
          "default": true,
          "description": "Automatische Chat-Empfehlungen anzeigen"
        },
        "aiTokenTracker.preferredModel": {
          "type": "string",
          "default": "auto-detect",
          "enum": [
            "auto-detect",
            "gpt-4o",
            "gpt-4o-mini", 
            "gpt-4-turbo",
            "gpt-4",
            "gpt-3.5-turbo",
            "claude-3-5-sonnet",
            "claude-3-opus",
            "claude-3-haiku",
            "github-copilot"
          ],
          "description": "Bevorzugtes AI-Modell f√ºr Token-Berechnung"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiTokenTracker",
          "title": "AI Token Tracker",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "aiTokenTracker": [
        {
          "id": "tokenScopeView",
          "name": "Token Scopes",
          "when": "true"
        },
        {
          "id": "tokenUsageView",
          "name": "Token Usage",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "tiktoken": "^1.0.10"
  }
}
